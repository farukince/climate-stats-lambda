{
  "compilerOptions": {
    "rootDir": "./",          
    "outDir": "./dist",       
    /* Environment Settings */
    "module": "CommonJS",     
    "target": "ES2020",       
    "lib": ["ES2020"],        
    "types": ["node", "aws-lambda"], 

    /* Other Outputs */
    "sourceMap": true,        
    "declaration": true,      

    /* Stricter Typechecking Options */
    "strict": true,           
    "noUncheckedIndexedAccess": true,

    /* Interop Constraints */
    "esModuleInterop": true,    
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,       

    /* Modules */
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": ["**/*.ts"],       
  "exclude": ["node_modules", "dist", "function.zip"] 
}
